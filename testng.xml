<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="GreenKart Automation Suite" parallel="tests" thread-count="3">

<suite name="EcommerceSuite">
    <test name="BrowserTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="base.BaseTest"/>
        </classes>
    </test>
</suite>


    <test name="Product Tests">
        <classes>
            <class name="tests.ProductTest"/>
        </classes>
    </test>

    <test name="Cart Tests">
        <classes>
            <class name="tests.CartTest"/>
        </classes>
    </test>

    <test name="Search Tests">
        <classes>
            <class name="tests.SearchTest"/>
        </classes>
    </test>

    <test name="Checkout Tests">
        <classes>
            <class name="tests.CheckoutTest"/>
        </classes>
    </test>

</suite>
